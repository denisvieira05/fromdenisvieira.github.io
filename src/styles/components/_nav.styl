.nav,
.nav-home
    > .list
        list-style none
        margin 0
        padding 0 13px 0

        > .item
            display inline-block

        > .item > .link
            display inline-block
            font-weight 300
            font-size 1.4rem
            padding 20px 10px
            text-decoration none

.nav
    position absolute
    right 3em
    top 2em

    > .list
        padding 0 13px 0

        > .item > .link
            font-size 2rem
            padding 5px 12px

.nav-home
    text-align center

    > .list
        padding 0

        > .item
            padding 7px 0px

        > .item > .link
            font-size 2rem
            margin 0
            border-radius 4%
            transition all .4s ease-in-out

            &:hover
                color alpha
